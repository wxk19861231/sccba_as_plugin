<idea-plugin>
    <id>com.sccba.plugin.assistant</id>
    <name>TreeInfoTip</name>
    <version>1.0.0</version>
    <vendor email="xxx@gmail.com" url="https://github.com/wxk19861231/TreeInfoTip">SCCBA</vendor>

    <description><![CDATA[
      <ul>
        <h3>English:</h3>
        <li>Add comment information to the project directory tree</li>
        <h3>中文：</h3>
        <li>项目目录树添加备注信息</li>
      </ul>
      <br/>
      <p><img src="https://raw.githubusercontent.com/wxk19861231/TreeInfoTip/master/image/show_1.jpg" width="500" height="480" alt="screenshots-balloon.png"/></p>
      <p><img src="https://raw.githubusercontent.com/wxk19861231/TreeInfoTip/master/image/show_1.gif" width="500" height="200" alt="screenshots-dialog.png"/></p>
      <br/>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <p>1.0.0</p>
        <li> 1.通过配置XML文件来描述目录树备注信息 </li>
        <li> 1.Describes the directory tree remark information by configuring the XML file </li>
      </ul>
    ]]></change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- <depends>com.intellij.modules.platform</depends>-->
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <postStartupActivity implementation="com.plugins.infotip.PluginStartupActivity"/>
        <treeStructureProvider implementation="com.plugins.infotip.TreeOnlyTextProvider"/>
        <projectViewNodeDecorator implementation="com.plugins.infotip.IgnoreViewNodeDecorator"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <!-- <group id="xxx" text="xxx" popup="true">
            <add-to-group group-id="xxx" anchor="first"/>
        </group>-->
        <action id="PopUp.AddRemarkAction" class="com.plugins.infotip.AddRemarkAction" text="Add Remark"
                description="Add remark">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="ReplaceInPath"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt R"/>
        </action>
    </actions>

</idea-plugin>